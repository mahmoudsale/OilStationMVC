@using OilStationMVC.Views.Shared.Resources
@model OilStationMVC.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}
<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">@SiteResource.You_are_only_one_step_a_way_from_your_new_password__recover_your_password_now_</p>

        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @ModelResources.Email })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @ModelResources.Password })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="input-group mb-3">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = @ModelResources.Password })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="input-group mb-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Reset" />
                </div>
            </div>
        }
        <p class="mt-3 mb-1">
            <a href="@Url.Action("Login","Account")">@SiteResource.Go_To_Login_Page</a>
        </p>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
