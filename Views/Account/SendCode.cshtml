@using OilStationMVC.Views.Shared.Resources
@model OilStationMVC.Models.SendCodeViewModel
@{
    ViewBag.Title = SiteResource.Send_Code;
    Layout = "~/Views/Account/_mLoginLayout.cshtml";

}

<div class="card">
     
    <div class="card-body login-card-body">
        <p class="login-box-msg">@SiteResource.Select_Two_Factor_Authentication</p>
        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("rememberMe", @Model.RememberMe)

            <hr />
            <div class="row">
                <div class="input-group mb-3">
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers, new { @class = "form-control" })
                </div>

            </div>
            <div class="row">
                <div class="col-4">
                    <input type="submit" value="@SiteResource.Send" class="btn btn-primary btn-block" />
                </div>
            </div>

        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

