@using OilStationMVC.Views.Shared.Resources
@model OilStationMVC.Models.RoleViewModel
@using OilStationMVC.Views.Shared.Resources
@{
    ViewData["Title"] = "New Role";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header  ">
                <h3 class="card-title "> @SiteResource.Create_New_Driver </h3>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card-body">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.RoleName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="card-footer">
                    <input type="submit" value="@SiteResource.Save" class="btn btn-primary" />
                    @Html.ActionLink(SiteResource.Back_To_List, "Roles", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
