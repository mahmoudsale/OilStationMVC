@model  OilStationMVC.ViewModels.UserClaimsViewModel
@using OilStationMVC.Views.Shared.Resources
@{
    ViewData["Title"] = "New Role";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add And Remove Calim From User <strong>@Model.UserId</strong> </h3>
            </div>
            @using (Html.BeginForm())
            {
                <div class="card-body">
                    @if (Model.Claims.Any())
                    {
                        <div class="row">
                            @for (int i = 0; i < Model.Claims.Count(); i++)
                            {
                                <div class="col-sm-6">
                                    <div class="form-group clearfix">
                                        <div class="icheck-primary d-inline">
                                            @Html.HiddenFor(m => Model.Claims[i].ClaimType)
                                            @Html.CheckBoxFor(m => Model.Claims[i].IsSelected)
                                            @Html.LabelFor(m => Model.Claims[i].IsSelected, Model.Claims[i].ClaimType)

                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    }
                </div>
                <div class="card-footer">
                    <input type="submit" value="Edit" class="btn btn-primary" />

                </div>
            }
        </div>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
