@model  List<OilStationMVC.Models.UserRoleViewModel>
@using OilStationMVC.Views.Shared.Resources
@{
    ViewData["Title"] = "New Role";
    Layout = "~/Views/Shared/_mLayout.cshtml";
}
@{
    ViewData["Title"] = "Edit Users Role";
    var RoleName = ViewBag.RoleName;
    var RoleId = ViewBag.RoleId;
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Add And Remove User From Role <strong>@RoleName</strong> </h3>
            </div>
            @using (Html.BeginForm())
            {
                <div class="card-body">
                    @if (Model.Any())
                    {
                    <div class="row">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <div class="col-sm-6">
                                <div class="form-group clearfix">
                                    <div class="icheck-primary d-inline">
                                        @Html.HiddenFor(m => Model[i].UserId)
                                        @Html.CheckBoxFor(m => Model[i].IsSelected)
                                        @Html.LabelFor(m => Model[i].IsSelected,Model[i].UserName)

                                    </div>
                                </div>
                            </div>
                        }
                   

                    </div>
                    }
                </div>
                <div class="card-footer">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                     
                </div>
            }
        </div>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
