@model OilStationMVC.Models.OilCompany
@using OilStationMVC.CustomHtmlHelper
@using OilStationMVC.Controllers

<div class="flex-fill overflow-auto">
    <div class="card">
        <div class="nav-tabs-responsive bg-light border-top">
            <div class="alert alert-success alert-bordered d-none " clientidmode="Static" id="ActionStatus" runat="server">gg</div>

        </div>
        <div class="tab-content">
            <div class="tab-pane fade show active" id="overview">
                @using (Html.BeginForm("Edit", "OilCompany", FormMethod.Post))
                {
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">

                                    @Html.LabelFor(m => m.nId)
                                    @Html.TextBoxFor(m => m.nId, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.nId, "", new { @class = "text-danger" })


                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.sName)
                                    @Html.TextBoxFor(m => m.sName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.sName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.nOpeningBalance)
                                    @Html.TextBoxFor(m => m.nOpeningBalance, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.nOpeningBalance, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.OpeningBalanceDate)
                                    @Html.EditorFor(m => m.OpeningBalanceDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.OpeningBalanceDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.nOpeningBalanceState)
                                    @Html.DropDownListFor(m => m.nOpeningBalanceState,
                                         Lookups.Acc_State(),
                                         "Select State",
                                         new { @class = "form-control"  })
                                    @Html.ValidationMessageFor(m => m.nOpeningBalance, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.nOpeningBalanceForStation)
                                    @Html.TextBoxFor(m => m.nOpeningBalanceForStation, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.nOpeningBalanceForStation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.OpeningBalanceDateForStation)
                                    @Html.EditorFor(m => m.OpeningBalanceDateForStation, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(m => m.OpeningBalanceDateForStation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.nOpeningBalanceStateForStation)
                                    @Html.DropDownListFor(m => m.nOpeningBalanceStateForStation,
                                      Lookups.Acc_State(),
                                      "Select State",
                                      new { @class = "form-control"  })
                                    @Html.ValidationMessageFor(m => m.nOpeningBalanceStateForStation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <button ID="btn_Save" runat="server" class="btn bg-success" Text="<%$ Resources:PagesResource,btn_Save%>" name="btn_Save"> Save</button>
                        <button ID="btn_Cancel" name="btn_Cancel" runat="server" class="btn bg-danger" Text=@Resources.PagesResource.btn_Cancel> Cancel</button>

                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>