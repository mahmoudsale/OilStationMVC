                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div> 
        </form>*@


    </div>
</div>
<div>
    <div class="alert alert-danger">
        <h2>Exception Path</h2>
        <p>
            @ViewBag.ExceptionPath.
        </p>
    </div>
    <div class="alert alert-danger">
        <h2>Exception Message</h2>
        <p>
            @ViewBag.ExceptionMessage.
        </p>
    </div>
    <div class="alert alert-danger">
        <h2>Exception StackTrace</h2>
        <p>
            @ViewBag.StackTrace.
        </p>
    </div>

</div>
