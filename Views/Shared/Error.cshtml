@{ 
    Layout = null;
}
<div class="error-page">
    <h2 class="headline text-danger">500</h2>
    <div class="error-content">
        <h3><i class="fas fa-exclamation-triangle text-danger"></i> Oops! Something went wrong.</h3>

        @if (ViewBag.ErrorTitle != null)
        {
            <p>@ViewBag.ErrorTitle</p>
        }

        <p>
            We will work on fixing that right away.
            Meanwhile, you may <a asp-action="Index" asp-controller="Home">Return To Home</a> or try using the search form.
        </p> 

    </div>
</div>
<div>
    <div class="alert alert-danger">
        <h2>Exception Path</h2>
        <p>
            @*@ViewData.Model.ControllerName/@ViewData.Model.ActionName.*@
        </p>
    </div>
    <div class="alert alert-danger">
        <h2>Exception Message</h2>
        <p>
            @ViewData.Model.Exception.Message
        </p>
    </div>
    <div class="alert alert-danger">
        <h2>Exception StackTrace</h2>
        <p>
            @ViewData.Model.Exception.StackTrace
        </p>
    </div>

</div>
<!-- /.error-page -->