@model  OilStationMVC.ViewModels.CommonBalanceViewModel
@using OilStationMVC.Views.Shared.Resources
<div class="card card-primary card-outline">
    <div class="card-body box-profile">
        <div class="text-center">
            <img class="profile-user-img img-fluid img-circle"
                 src="~/assets/dist/img/user4-128x128.jpg"
                 alt="User profile picture">
        </div>
        <h3 class="profile-username text-center">@Model.SubledgerName</h3>
        <p class="text-muted text-center">@Model.Telephone</p>
        <ul class="list-group list-group-unbordered mb-3">
            @if (Model.Balance > 0)
            {
                <li class="list-group-item">
                    <b>@SiteResource.Credit</b> <a class="float-right">@Model.Credit</a>
                </li>
                <li class="list-group-item">
                    <b>@SiteResource.Debit</b> <a class="float-right">@Model.Debit</a>
                </li>
                <li class="list-group-item">
                    <b>@SiteResource.Balalnce - Credit</b> <a class="float-right text-primary">@Model.Balance</a>
                </li>
            }
            else if (Model.Balance < 0)
            {
                <li class="list-group-item">
                    <b>@SiteResource.Credit</b> <a class="float-right">@Model.Credit</a>
                </li>
                <li class="list-group-item">
                    <b>@SiteResource.Debit</b> <a class="float-right">@Model.Debit</a>
                </li>
                <li class="list-group-item">
                    <b>@SiteResource.Balalnce - Debit</b> <a class="float-right text-danger">@Model.Balance</a>
                </li>
            }

            else

            {
                <li class="list-group-item">
                    <b>@SiteResource.Credit</b> <a class="float-right">@Model.Credit</a>
                </li>
                <li class="list-group-item">
                    <b>@SiteResource.Debit</b> <a class="float-right">@Model.Debit</a>
                </li>
                <li class="list-group-item">
                    <b>@SiteResource.Balalnce - Zero </b> <a class="float-right text-gray">@Model.Balance</a>
                </li>
            }
        </ul>
    </div>
</div>
