@model OilStationMVC.ViewModels.ReportViewModel
@using OilStationMVC.Views.Shared.Resources
@using OilStationMVC.CommonFolder
@{
    ViewBag.Title = "Index";
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title</h3>
    </div>
    @using (Html.BeginForm("CountersObservation", "Report", FormMethod.Post, new { @target = "_blank" }))
    {
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-body">
            @Html.HiddenFor(model => model.ReportName, htmlAttributes: new { @class = "col-sm-2 col-form-label" })

            <div class="form-group row">
                @Html.LabelFor(model => model.FromDate, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.FromDate, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                </div>
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.ToDate, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.ToDate, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                </div>
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.FromSubledgerId, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.FromSubledgerId,
                             Lookups.CostCenterList(2),
                             SiteResource.Please_Select,
                             new { @class = "form-control"  })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.ToSubledgerId, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.ToSubledgerId,
                             Lookups.CostCenterList(3),
                             SiteResource.Please_Select,
                             new { @class = "form-control"  })
                </div>
            </div>


        </div>
        <div class="card-footer">
            <input type="submit" name="Print" value="Print" target="_blank" class="btn btn-info" />
            @*@Html.ActionLink(SiteResource.Back_To_List, "Index", new { JournalType = @JournalId, SubledgerTypeId = @SubledgerType }, new { @class = "btn btn-default" })*@
        </div>
    }
</div>


