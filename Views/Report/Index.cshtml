@using OilStationMVC.Views.Shared.Resources
@using OilStationMVC.CommonFolder
@{
    ViewBag.Title = "Index";
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">@SiteResource.Voucher_List</h3>
    </div>
    @using (Html.BeginForm("Print", "Report"))
    {
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-body">

            <div class="form-group row">
                @Html.Label("Company", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DropDownList("SubledgerId",
                             Lookups.CostCenterList(2),
                             SiteResource.Please_Select,
                             new { @class = "form-control"  })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("From Date", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.Editor("dDate", new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                </div>
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                @Html.Label("To Date", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.Editor("dDate", new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                </div>
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <input type="submit" name="Print" value="Print" target="_blank" class="btn btn-info" />
        </div>
    }
</div>


